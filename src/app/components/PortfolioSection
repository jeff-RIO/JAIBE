import { useState } from "react";
import tattooWork1 from "@/assets/tattoo-work-1.png";
import tattooWork2 from "@/assets/tattoo-work-2.png";
import artWork1 from "@/assets/art-work-1.png";
import florCacau from "@/assets/flor-cacau.png";
import florMaracuja from "@/assets/flor-maracuja.png";

type Category = "todos" | "tatuagem" | "arte";

const portfolioItems = [
  {
    id: 1,
    image: tattooWork1,
    title: "Botânica Delicada",
    category: "tatuagem" as const,
  },
  {
    id: 2,
    image: tattooWork2,
    title: "Peônia Clássica",
    category: "tatuagem" as const,
  },
  {
    id: 3,
    image: florCacau,
    title: "Flor de Cacau",
    category: "arte" as const,
  },
  {
    id: 4,
    image: tattooWork1,
    title: "Ramo Minimalista",
    category: "tatuagem" as const,
  },
  {
    id: 5,
    image: florMaracuja,
    title: "Flor de Maracujá",
    category: "arte" as const,
  },
  {
    id: 6,
    image: artWork1,
    title: "Calêndulas",
    category: "arte" as const,
  },
];

const PortfolioSection = () => {
  const [activeCategory, setActiveCategory] = useState<Category>("todos");

  const filteredItems =
    activeCategory === "todos"
      ? portfolioItems
      : portfolioItems.filter((item) => item.category === activeCategory);

  const categories: { value: Category; label: string }[] = [
    { value: "todos", label: "Todos" },
    { value: "tatuagem", label: "Tattoo" },
    { value: "arte", label: "Arte" },
  ];

  return (
    <section id="portfolio" className="py-20 md:py-28 bg-background texture-noise">
      <div className="container mx-auto px-6">
        {/* Header */}
        <div className="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
          <div>
            <div className="flex items-center gap-3 mb-4">
              <div className="w-8 h-1 bg-primary" />
              <span className="font-display text-primary text-lg tracking-[0.3em] uppercase">
                Trabalhos
              </span>
            </div>
            <h2 className="font-display text-5xl md:text-6xl text-foreground leading-none">
              PORTFÓLIO
            </h2>
          </div>

          {/* Filter - street style tabs */}
          <div className="flex items-center gap-2">
            {categories.map((category) => (
              <button
                key={category.value}
                onClick={() => setActiveCategory(category.value)}
                className={`font-display text-base tracking-widest px-5 py-2 transition-all duration-200 border-2 ${
                  activeCategory === category.value
                    ? "bg-primary text-primary-foreground border-primary"
                    : "bg-transparent text-foreground/60 border-border hover:border-primary hover:text-primary"
                }`}
              >
                {category.label}
              </button>
            ))}
          </div>
        </div>

        {/* Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {filteredItems.map((item, index) => (
            <div
              key={item.id}
              className="group relative aspect-square overflow-hidden cursor-pointer bg-card border border-border hover:border-primary transition-all duration-300"
            >
              <img
                src={item.image}
                alt={item.title}
                className="w-full h-full object-contain p-6 transition-all duration-500 group-hover:scale-105"
              />
              {/* Overlay */}
              <div className="absolute inset-0 bg-background/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <div className="text-center">
                  <span className="font-display text-primary text-sm tracking-widest block mb-2">
                    {item.category === "tatuagem" ? "TATTOO" : "ARTE"}
                  </span>
                  <h3 className="font-display text-2xl text-foreground">
                    {item.title}
                  </h3>
                  <div className="w-8 h-1 bg-primary mx-auto mt-3" />
                </div>
              </div>
              {/* Index number */}
              <span className="absolute top-3 left-3 font-display text-4xl text-primary/20 group-hover:text-primary/40 transition-colors">
                {String(index + 1).padStart(2, '0')}
              </span>
            </div>
          ))}
        </div>
      </div>
    </section>
  );
};

export default PortfolioSection;
